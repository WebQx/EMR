# WebQX Healthcare Platform - Staging Environment Configuration

# Staging Environment Variables
NODE_ENV=staging
DEPLOYMENT_ENV=staging

# Database Configuration
DATABASE_URL=postgresql://username:password@staging-db-host:5432/webqx_staging
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# API Configuration
API_BASE_URL=https://staging-api.webqx.health
FHIR_BASE_URL=https://staging-fhir.webqx.health
API_TIMEOUT=15000
API_RATE_LIMIT=500

# Security Configuration (Use different keys than production)
JWT_SECRET=your_staging_jwt_secret_here
ENCRYPTION_KEY=your_staging_encryption_key_here
SESSION_SECRET=your_staging_session_secret_here
BCRYPT_ROUNDS=10

# Healthcare Integration APIs (Staging endpoints)
EMR_API_KEY=your_staging_emr_api_key
EMR_BASE_URL=https://staging-emr-api.webqx.health
PHARMACY_API_KEY=your_staging_pharmacy_api_key
LAB_API_KEY=your_staging_lab_results_api_key
IMAGING_API_KEY=your_staging_imaging_api_key

# PACS Configuration (Staging)
PACS_SERVER_URL=https://staging-pacs.webqx.health
DICOM_PORT=11112
OHIF_VIEWER_URL=https://staging-viewer.webqx.health

# Notification Services
SMTP_HOST=smtp.webqx.health
SMTP_PORT=587
SMTP_USER=staging-notifications@webqx.health
SMTP_PASS=your_staging_smtp_password
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/staging/webhook

# Monitoring and Analytics
ANALYTICS_API_KEY=your_staging_analytics_key
MONITORING_ENDPOINT=https://staging-monitoring.webqx.health
SENTRY_DSN=https://your-staging-sentry-dsn

# File Storage (Staging bucket)
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your_staging_aws_access_key
AWS_SECRET_ACCESS_KEY=your_staging_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=webqx-staging-storage

# Redis Cache
REDIS_URL=redis://staging-redis-host:6379
REDIS_PASSWORD=your_staging_redis_password

# Healthcare Compliance (Relaxed for staging)
HIPAA_ENCRYPTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true
DATA_RETENTION_DAYS=30
BACKUP_RETENTION_DAYS=7

# Application Features (Test new features in staging)
FEATURE_AI_ASSISTANT=true
FEATURE_TRANSCRIPTION=true
FEATURE_MULTILINGUAL=true
FEATURE_MOBILE_APP=true
FEATURE_BETA_TESTING=true

# Performance Settings (Lower limits for staging)
MAX_CONCURRENT_USERS=1000
REQUEST_TIMEOUT=15000
MEMORY_LIMIT=512m
CPU_LIMIT=1000m

# Debug Settings (Staging only)
DEBUG_MODE=false
VERBOSE_LOGGING=true
PERFORMANCE_MONITORING=true

# Deployment Information (auto-populated by CI/CD)
BUILD_VERSION=staging
BUILD_TIME=2024-01-01T00:00:00Z
DEPLOYMENT_TYPE=staging
DEPLOYER=ci-cd-system