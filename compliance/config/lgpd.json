    "breachManagement": "/admin/lgpd-incidentes",
    "reportingSchedule": {
      "weekly": "status_consentimento",
      "monthly": "resumo_solicitacoes",
      "quarterly": "revisao_conformidade"
    },
    "alerts": {
      "consentExpiring": "7_days_before",
      "requestOverdue": "12_days",
      "breachDetected": "immediate"
    },
    "brazilianHolidays": {
      "considerBusinessDays": true,
      "adjustDeadlines": true
    }
  },
  "auditAndCompliance": {
    "regularAudits": true,
    "auditFrequency": "annual",
    "complianceAssessment": true,
    "anpdCompliance": true,
    "localLawCompliance": true,
