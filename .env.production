# WebQX Healthcare Platform - Environment Configuration

# Production Environment Variables
NODE_ENV=production
DEPLOYMENT_ENV=production

# Database Configuration
DATABASE_URL=postgresql://username:password@production-db-host:5432/webqx_production
DATABASE_SSL=true
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# API Configuration
API_BASE_URL=https://api.webqx.health
FHIR_BASE_URL=https://fhir.webqx.health
API_TIMEOUT=30000
API_RATE_LIMIT=1000

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here
BCRYPT_ROUNDS=12

# Healthcare Integration APIs
EMR_API_KEY=your_emr_api_key
EMR_BASE_URL=https://emr-api.webqx.health
PHARMACY_API_KEY=your_pharmacy_api_key
LAB_API_KEY=your_lab_results_api_key
IMAGING_API_KEY=your_imaging_api_key

# PACS Configuration
PACS_SERVER_URL=https://pacs.webqx.health
DICOM_PORT=11112
OHIF_VIEWER_URL=https://viewer.webqx.health

# Notification Services
SMTP_HOST=smtp.webqx.health
SMTP_PORT=587
SMTP_USER=notifications@webqx.health
SMTP_PASS=your_smtp_password
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Monitoring and Analytics
ANALYTICS_API_KEY=your_analytics_key
MONITORING_ENDPOINT=https://monitoring.webqx.health
SENTRY_DSN=https://your-sentry-dsn

# File Storage
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=webqx-production-storage

# Redis Cache
REDIS_URL=redis://production-redis-host:6379
REDIS_PASSWORD=your_redis_password

# Healthcare Compliance
HIPAA_ENCRYPTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true
DATA_RETENTION_DAYS=2555
BACKUP_RETENTION_DAYS=365

# Application Features
FEATURE_AI_ASSISTANT=true
FEATURE_TRANSCRIPTION=true
FEATURE_MULTILINGUAL=true
FEATURE_MOBILE_APP=true

# Performance Settings
MAX_CONCURRENT_USERS=10000
REQUEST_TIMEOUT=30000
MEMORY_LIMIT=1024m
CPU_LIMIT=2000m

# Deployment Information (auto-populated by CI/CD)
BUILD_VERSION=production
BUILD_TIME=2024-01-01T00:00:00Z
DEPLOYMENT_TYPE=production
DEPLOYER=ci-cd-system