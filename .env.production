# WebQX Production Environment Configuration
NODE_ENV=production

# Server Ports
MAIN_PORT=3000
DJANGO_PORT=3001
OPENEMR_PORT=3002
TELEHEALTH_PORT=3003

# Network Configuration
HOST=0.0.0.0
SERVER_NAME=webqx-server

# Security Configuration
JWT_SECRET=your-production-jwt-secret-key-here
SESSION_SECRET=your-production-session-secret-here
ENCRYPTION_KEY=your-production-encryption-key-here

# SSL Configuration (if using HTTPS)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/webqx.crt
SSL_KEY_PATH=/etc/ssl/private/webqx.key

# Database Configuration (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=webqx
DB_USER=webqx_user
DB_PASSWORD=your-db-password

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/webqx/server.log

# Performance
MAX_REQUESTS_PER_WINDOW=1000
WINDOW_MS=900000

# Health Check
HEALTH_CHECK_INTERVAL=30000
SERVICE_TIMEOUT=10000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/var/lib/webqx/uploads

# Cache Configuration
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password