# Production Environment Configuration for WebQx Healthcare Platform
# Domain: WebQx.org

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Domain Configuration
DOMAIN=webqx.org
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/webqx.org.crt
SSL_KEY_PATH=/etc/ssl/private/webqx.org.key

# Database Configuration (Production PostgreSQL)
DATABASE_URL=postgresql://webqx_prod:${DB_PASSWORD}@db.webqx.org:5432/webqx_production
DB_HOST=db.webqx.org
DB_PORT=5432
DB_NAME=webqx_production
DB_USER=webqx_prod
DB_PASSWORD=${DB_PASSWORD}
DB_SSL=true
DB_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=10000

# Security & Authentication (Production)
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}
SESSION_SECRET=${SESSION_SECRET}
BCRYPT_ROUNDS=12

# External APIs (Production)
FHIR_SERVER_URL=https://fhir.webqx.org/fhir
HL7_ENDPOINT=https://hl7.webqx.org
PHARMACY_API_URL=https://api.pharmacy.webqx.org
LAB_RESULTS_API_URL=https://api.labs.webqx.org

# AI/NLP Services (Production)
WHISPER_API_URL=https://api.openai.com/v1/audio/transcriptions
WHISPER_API_KEY=${WHISPER_API_KEY}
OPENAI_API_KEY=${OPENAI_API_KEY}
NLP_SERVICE_URL=https://nlp.webqx.org

# Messaging & Communication (Production)
MATRIX_SERVER_URL=https://matrix.webqx.org
MEDPLUM_API_URL=https://api.medplum.com
SECURE_MESSAGING_KEY=${SECURE_MESSAGING_KEY}

# Email Configuration (Production)
SMTP_HOST=smtp.webqx.org
SMTP_PORT=587
SMTP_USER=noreply@webqx.org
SMTP_PASSWORD=${SMTP_PASSWORD}
FROM_EMAIL=noreply@webqx.org
SMTP_SECURE=true

# Healthcare Integration (Production)
EPIC_CLIENT_ID=${EPIC_CLIENT_ID}
EPIC_CLIENT_SECRET=${EPIC_CLIENT_SECRET}
CERNER_API_KEY=${CERNER_API_KEY}
ALLSCRIPTS_API_KEY=${ALLSCRIPTS_API_KEY}

# Compliance & Audit (Production)
AUDIT_LOG_RETENTION_DAYS=2555
VAULT_SERVER_URL=https://vault.webqx.org
VAULT_TOKEN=${VAULT_TOKEN}
HIPAA_AUDIT_ENABLED=true

# Analytics & Monitoring (Production)
GRAFANA_URL=https://grafana.webqx.org
METABASE_URL=https://analytics.webqx.org
MONITORING_API_KEY=${MONITORING_API_KEY}
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}
SENTRY_DSN=${SENTRY_DSN}

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_FHIR_MAX=500

# Caching (Production)
REDIS_URL=redis://redis.webqx.org:6379
CACHE_TTL=3600

# File Storage (Production)
AWS_S3_BUCKET=webqx-production-files
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=us-east-1

# CDN Configuration
CDN_URL=https://cdn.webqx.org
STATIC_ASSETS_URL=https://static.webqx.org

# Localization (Production)
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,pt,zh,ar,hi,ja
TRANSLATION_API_KEY=${TRANSLATION_API_KEY}

# Logging (Production)
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/webqx/application.log
ENABLE_REQUEST_LOGGING=true

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Deployment
DEPLOYMENT_ENV=production
DEPLOYMENT_USER=webqx
DEPLOYMENT_GROUP=webqx