# PACS Integration Environment Variables

# Orthanc Configuration
ORTHANC_URL=http://localhost:8042
ORTHANC_USERNAME=orthanc
ORTHANC_PASSWORD=orthanc
ORTHANC_API_KEY=
ORTHANC_STORAGE_DIR=/var/lib/orthanc/db
ORTHANC_MAX_CONNECTIONS=10
ORTHANC_TIMEOUT_MS=30000
ORTHANC_ENABLE_DICOMWEB=true
ORTHANC_PLUGINS=dicom-web,postgresql

# Dicoogle Configuration
DICOOGLE_URL=http://localhost:8080
DICOOGLE_INDEX_PATH=/opt/dicoogle/index
DICOOGLE_TIMEOUT_MS=15000
DICOOGLE_MAX_RESULTS=1000
DICOOGLE_ADVANCED_SEARCH=true
DICOOGLE_PROVIDERS=lucene,file

# OHIF Viewer Configuration
OHIF_URL=http://localhost:3001/ohif
WADO_RS_ROOT=http://localhost:8042/wado-rs
QIDO_RS_ROOT=http://localhost:8042/qido-rs
OHIF_ENABLE_MEASUREMENTS=true
OHIF_ENABLE_ANNOTATIONS=true
OHIF_DEFAULT_LAYOUT=oneByTwo

# PostDICOM Configuration
POSTDICOM_API_KEY=your_postdicom_api_key_here
POSTDICOM_URL=https://api.postdicom.com
POSTDICOM_ORG_ID=your_organization_id_here
POSTDICOM_ENABLE_CLOUD=false
POSTDICOM_SYNC_INTERVAL_MS=300000
POSTDICOM_MAX_UPLOAD_MB=2048

# PACS Security Configuration
PACS_ENABLE_ENCRYPTION=true
PACS_ENCRYPTION_ALGORITHM=AES-256-GCM
PACS_REQUIRE_AUTH=true
PACS_ALLOWED_ROLES=physician,radiologist,technician,admin
PACS_AUDIT_LOGGING=true
PACS_DATA_RETENTION_DAYS=2555

# PACS Performance Configuration
PACS_ENABLE_CACHING=true
PACS_CACHE_TIMEOUT_MS=3600000
PACS_MAX_CACHE_MB=1024
PACS_ENABLE_PREFETCHING=false
PACS_COMPRESSION_LEVEL=6
PACS_THUMBNAIL_WIDTH=256
PACS_THUMBNAIL_HEIGHT=256