{
  "name": "webqx-healthcare-platform",
  "version": "1.0.0",
  "description": "WebQXâ„¢: Modular Healthcare Platform - A multilingual, specialty-aware, and privacy-first blueprint for global clinical care",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "build": "tsc",
    "build:prod": "NODE_ENV=production tsc",
    "dev": "NODE_ENV=development node server.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage"
  },
  "keywords": [
    "healthcare",
    "medical",
    "webqx",
    "patient-portal",
    "healthcare-platform"
  ],
  "author": "WebQX Health",
  "license": "Apache-2.0",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.0",
    "@types/jest": "^29.5.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "*.js",
      "*.ts",
      "!dist/**/*",
      "!node_modules/**/*",
      "!*.config.js"
    ]
  }
}