# Lambda-optimized Environment Variables for WebQX Healthcare Platform

# Core Configuration
NODE_ENV=production
SERVE_STATIC=false
PORT=3000

# Authentication & Security (Required)
JWT_SECRET=your_jwt_secret_key_min_32_characters
SESSION_SECRET=your_session_secret_key

# CORS Configuration
CORS_ORIGINS=https://your-frontend-domain.com,https://your-app-domain.com

# FHIR Configuration (Core)
FHIR_SERVER_URL=https://your-fhir-server.com/fhir

# OAuth2 Core Configuration
OAUTH2_ISSUER=https://auth.webqx.health
OAUTH2_CLIENT_ID=webqx-healthcare-platform
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret
OAUTH2_SCOPE=openid profile email patient/*.read patient/*.write user/*.read

# Optional Features (Set to enable)
# AZURE_TENANT_ID=your_azure_tenant_id
# AZURE_CLIENT_ID=your_azure_client_id
# AZURE_CLIENT_SECRET=your_azure_client_secret

# KEYCLOAK_URL=http://your-keycloak-server:8080/auth
# KEYCLOAK_REALM=webqx-healthcare
# KEYCLOAK_CLIENT_ID=webqx-openemr
# KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret

# External APIs (Optional)
# WHISPER_API_KEY=your_whisper_api_key
# OPENAI_API_KEY=your_openai_api_key

# Healthcare Compliance
HIPAA_COMPLIANT_MODE=true
ENABLE_AUDIT_LOGGING=true
ENABLE_DATA_ENCRYPTION=true

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de

# Lambda-specific optimizations
AWS_LAMBDA_FUNCTION_MEMORY_SIZE=512
AWS_LAMBDA_FUNCTION_TIMEOUT=30